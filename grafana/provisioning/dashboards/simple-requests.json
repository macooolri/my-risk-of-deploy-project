{
  "id": null,
  "uid": "notes-reqs",
  "title": "Notes API — Requests & Errors",
  "timezone": "",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "My App",
      "id": 6,
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "up{job=\"myapp\"}"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "noValue": "Недоступен",
          "custom": {
            "displayMode": "auto"
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "Недоступен", "color": "red", "index": 1 },
                "1": { "text": "Работает", "color": "green", "index": 0 }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Value" },
            "properties": [
              {
                "id": "displayName",
                "value": "Статус"
              }
            ]
          }
        ]
      }
    },
    {
      "type": "stat",
      "title": "База данных",
      "id": 7,
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "database_health_status * on(instance, job) up{job=\"myapp\"}"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "noValue": "Недоступна",
          "custom": {
            "displayMode": "auto"
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "Недоступна", "color": "red", "index": 1 },
                "1": { "text": "Подключена", "color": "green", "index": 0 }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Value" },
            "properties": [
              {
                "id": "displayName",
                "value": "Статус"
              }
            ]
          }
        ]
      }
    },
    {
      "type": "stat",
      "title": "Запросов за 1 минуту",
      "id": 1,
      "gridPos": { "x": 8, "y": 0, "w": 5, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(http_requests_total[1m]))"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "req",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Warnings (4xx) за 1 минуту",
      "id": 2,
      "gridPos": { "x": 13, "y": 0, "w": 5, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(http_warnings_total[1m]))"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
